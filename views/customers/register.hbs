<!DOCTYPE html>
<html>
    <head>
        <title>API-POO</title>

         <link rel="stylesheet" type="text/css"  href="../assets/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css"  href="../assets/css/style.css">
    </head>
    <body>
        <div class="container-fluid h-100 bg-info">
            <div class="row h-100 justify-content-center align-items-center">
                <div class="container bg-light col-4 p-4">
                    <form action="../customers" method="post">
                        <h1>Cadastro de cliente</h1>
                        <div class="form-group">
                            <label>Nome</label>
                            <input class="form-control" name="name" >
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control" name="email" type="email" >
                        </div>

                        <div class="form-group">
                            <label>Senha</label>
                            <input class="form-control" name="password" type="password" >
                        </div>

                        <div class="form-group">
                            <label>Data de nascimento</label>
                            <input class="form-control" name="birthday" type="date" >
                        </div>

                        <div class="form-group">
                            <label>CPF</label>
                            <input class="form-control" name="cpf" type="number" >
                        </div>

                        <div class="form-group">
                            <label>Telefone</label>
                            <input class="form-control" name="phone" type="number" >
                        </div>

                        <fieldset>
                            <legend>Endereço</legend>
                             <div class="form-group">
                                <label>Rua</label>
                                <input class="form-control" name="street" type="text" >
                            </div>

                            <div class="form-group">
                                <label>Bairo</label>
                                <input class="form-control" name="district" type="text" >
                            </div>

                            <div class="form-group">
                                <label>Número</label>
                                <input class="form-control" name="address-number" type="number" >
                            </div>

                            <div class="form-group">
                                <label>Cidade</label>
                                <input class="form-control" name="city" type="text" >
                            </div>

                            <div class="form-group">
                                <label>CEP</label>
                                <input class="form-control" name="cep" type="number" >
                            </div>
                        </fieldset>

                        <fieldset>
                            <legend>Documento de identificação</legend>

                            <div class="form-group">
                                <label>Número do documento</label>
                                <input class="form-control" name="doc-number" type="number" >
                            </div>

                            <div class="form-group">
                                <label>Órgão emissor</label>
                                <input class="form-control" name="issuingBody" type="text" >
                            </div>

                            <div class="form-group">
                                <label>Tipo de documento</label>
                                <input class="form-control" name="doc-type" type="text" >
                            </div>
                        </fieldset>

                        <fieldset>
                            <legend>Dados do cartão de crédito</legend>

                             <div class="form-group">
                                <label>Número do cartão</label>
                                <input class="form-control" name="cardNumber" type="number" >
                            </div>

                             <div class="form-group">
                                <label>Nome do titular do cartão</label>
                                <input class="form-control" name="cardName" type="text" >
                            </div>

                             <div class="form-group">
                                <label>Valido até</label>
                                <input class="form-control" name="validUntil" type="date" >
                            </div>

                             <div class="form-group">
                                <label>Código de segurança</label>
                                <input class="form-control" name="securityCode" type="number" >
                            </div>
                        </fieldset>

                        <input class="btn btn-primary" type="submit" value="Enviar">
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>